{
  "manifest_version": 2,
  "name": "Random English Word",
  "version": "1.0",
  "description": "Display a random English word with Ukrainian translation.",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_icon": {
      "16": "images/icon1.png",
      "48": "images/icon2.png",
      "128": "images/icon3.png"
    },
    "default_title": "Random English Word",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon1.png",
    "48": "images/icon2.png",
    "128": "images/icon3.png"
  } 
}
